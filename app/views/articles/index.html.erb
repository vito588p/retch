<h1>文章列表</h1>

<!-- <a href="/articles/new">新增文章</a> -->
<%= link_to "新增文章", new_article_path %>

<ul>
<% @articles.each do |article| %>
  <li>
      <!-- <a href="/articles/<%#= article.id %>"><%#= article.title %></a> -->
      <%#= link_to article.title, "/articles/#{article.id}" %>

      <%= link_to article.title, article_path(article.id) %>
      <%= link_to "edit", edit_article_path(article.id) %>
      <%= link_to "del", article_path(article.id), 
                        data: { 
                          turbo_method: "delete",
                          turbo_confirm: "確定刪除嗎？" 
                        } %>
    

      <%#= link_to article.title, show_articles_path(article)%>
      <%#= link_to article.title, article %>
  </li>
<% end %>
</ul>